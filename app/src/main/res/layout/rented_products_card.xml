<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/rented_products_card_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/colorPrimary" />

        <TextView
            android:id="@+id/rented_products_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Product Title"
            android:textColor="@color/primaryText"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/rented_products_card_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rented_products_card_rented_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Rented On"
            android:textColor="@color/primaryText"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/rented_products_card_img"
            app:layout_constraintTop_toBottomOf="@+id/rented_products_card_title" />

        <TextView
            android:id="@+id/rented_products_card_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Owner"
            android:textColor="@color/primaryText"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/rented_products_card_img"
            app:layout_constraintTop_toBottomOf="@+id/rented_products_card_rented_on" />

        <TextView
            android:id="@+id/rented_products_card_days_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Days Remaining"
            android:textColor="@color/primaryText"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/rented_products_card_img"
            app:layout_constraintTop_toBottomOf="@+id/rented_products_card_owner" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>